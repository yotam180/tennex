# Tennex Development Environment Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
TENNEX_DATABASE_URL=postgres://tennex:tennex123@localhost:5432/tennex?sslmode=disable
TENNEX_DATABASE_MAX_CONNS=25
TENNEX_DATABASE_MIN_CONNS=5
TENNEX_DATABASE_MAX_CONN_LIFETIME=1h

# NATS Configuration
TENNEX_NATS_URL=nats://localhost:4222

# Backend Service Configuration
TENNEX_HTTP_PORT=8082
TENNEX_HTTP_HOST=0.0.0.0
TENNEX_GRPC_PORT=9001
TENNEX_GRPC_HOST=0.0.0.0

# Event Stream Service Configuration
TENNEX_EVENTSTREAM_HTTP_PORT=8083
TENNEX_EVENTSTREAM_HTTP_HOST=0.0.0.0
TENNEX_EVENTSTREAM_BACKEND_URL=http://localhost:8082

# Bridge Service Configuration
TENNEX_BRIDGE_HTTP_PORT=8081
TENNEX_BRIDGE_HTTP_HOST=0.0.0.0
TENNEX_BRIDGE_BACKEND_URL=http://localhost:8082

# Logging Configuration
TENNEX_LOG_LEVEL=info
TENNEX_LOG_JSON=false

# MinIO Configuration (Optional)
TENNEX_MINIO_ENDPOINT=localhost:9000
TENNEX_MINIO_ACCESS_KEY=tennex
TENNEX_MINIO_SECRET_KEY=tennex123
TENNEX_MINIO_USE_SSL=false
TENNEX_MINIO_BUCKET=tennex-media
