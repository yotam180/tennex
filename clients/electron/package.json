{
  "name": "tennex-electron",
  "version": "1.0.0",
  "description": "Local-first WhatsApp messaging client",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "npm run clean:ports && concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main/main/index.js",
    "dev:renderer": "npm run clean:vite-ports && vite",
    "clean:ports": "npm run clean:vite-ports && npm run clean:electron-processes",
    "clean:vite-ports": "lsof -ti:5173 | xargs kill -9 2>/dev/null || true",
    "clean:electron-processes": "pkill -f 'electron.*tennex' 2>/dev/null || true",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "build:staging": "cross-env NODE_ENV=staging npm run build",
    "codegen": "npm run codegen:api && npm run codegen:db",
    "codegen:api": "openapi-typescript ../../pkg/api/openapi.yaml -o src/generated/api-types.ts",
    "codegen:db": "drizzle-kit generate:sqlite",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "package": "npm run build && electron-builder",
    "package:prod": "cross-env NODE_ENV=production TENNEX_BACKEND_URL=https://api.tennex.com npm run build && electron-builder",
    "rebuild": "npx electron-rebuild",
    "postinstall": "npx electron-rebuild"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@tanstack/react-query": "^5.8.4",
    "better-sqlite3": "^9.2.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "drizzle-orm": "^0.29.1",
    "electron-updater": "^6.1.7",
    "framer-motion": "^10.16.16",
    "immer": "^10.0.3",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "tailwind-merge": "^2.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.6",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "openapi-typescript": "^6.7.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vite-plugin-electron": "^0.15.5",
    "vitest": "^1.0.1"
  }
}
